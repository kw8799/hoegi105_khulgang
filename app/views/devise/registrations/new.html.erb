<div class = "page-signup" align="center">
  <div class= "innerpage">
    <div class= "pagehead" align="right"><%= render "devise/shared/links" %></div>
    <div>
        <h1 id="title-signup">회원가입</h1>
    </div>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      
        <!--<div><%= f.label :학번 %><br />-->
        <!--    <%= f.text_field :student_num, autofocus: true %></div>-->
        
        <div class="reg-row1">
            <h4 class="reg-label">아이디</h4>
        </div>
        <div>
          <%= f.email_field :email, autofocus: true, id: "reg-form-id", class: "form-control", placeholder: "이메일 주소" %>
        </div>
        
        <div class="reg-row1">
            <h4 class="reg-label">비밀번호</h4>
        </div>
        <div>
          <%= f.password_field :password, autocomplete: "off", id: "reg-form-id", class: "form-control", placeholder: "비밀번호 (8자 이상)" %>
        </div>
        
        <div>
        <%= f.password_field :password_confirmation, autocomplete: "off", id: "reg-form-id", class: "form-control", placeholder: "비밀번호 확인" %>
        </div>
  </div>
      
  <div class="actions">
  <%= f.submit "가입하기", id: "reg-form-button", class: "btn btn-lg btn-default" %>
  </div>
  <% end %>
    
  
</div>
